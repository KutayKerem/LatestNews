<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LatestNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">@android:color/transparent</item>

    </style>
    <style name="SCREEN" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>
    <style name="TEXT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ICON_TINT">
        <item name="android:tint">@color/dark</item>
    </style>

</resources>